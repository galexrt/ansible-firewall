[Unit]
Description=Loading IP Sets
Before=network-pre.target iptables.service ip6tables.service
Wants=network-pre.target
ConditionPathExists={{ conf_file_location }}/ipset

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart={{ firewall_ipset_path }} -f "{{ conf_file_location }}/ipset" restore
ExecReload={{ firewall_ipset_path }} -f "{{ conf_file_location }}/ipset" restore
ExecStop={{ firewall_ipset_path }} destroy

[Install]
WantedBy=basic.target
